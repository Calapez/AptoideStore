<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.brunoponte.aptoidestore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AptoideStoreApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AptoideStore">

        <activity
            android:name=".presentation.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="pt.brunoponte.aptoidestore.HiltTestActivity"
            android:exported="false" />

    </application>

</manifest>